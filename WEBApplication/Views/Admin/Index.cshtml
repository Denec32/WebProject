@model IEnumerable<User>

<div class=" m-1 p-1">
    <h4>Учетные записи пользователей</h4>
</div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-sm" table-bordered>
    <tr>
        <th>ID</th>
        <th>Имя</th>
        <th>Email</th>
        <th></th>
        <th></th>

    </tr>

    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Учетные записи отсутствуют</td></tr>
    }
    else
    {
        foreach (User user in Model)
        { 
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>

            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit"
                   asp-route-id="@user.Id">Редактировать</a>
            </td>

            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </td>

            <!--
                            <td>
                                <form asp-action="Delete" asp-route-id ="@user.Id" method="post">
                                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Редактировать</a>
                                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                                </form>
                            </td>
            -->
        </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="Create">Создать</a>