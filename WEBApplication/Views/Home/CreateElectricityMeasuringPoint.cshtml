@{
    ViewData["Title"] = "Добавление новой точки";
}

<form asp-area="" asp-controller="Home" asp-action="PostMP">
    <h2>Точка измерения электроэнергии</h2>
    <div class="border-bottom">
        <div class="form-group">
            <input hidden value="@ViewBag.Id" name="ElectricityMeasuringPoint.PointOfUseId" />
            <label for="ElectricityMeasuringPoint.Name">Название точки измерения электроэнергии</label>
            <input id="ElectricityMeasuringPoint.Name" class="form-control" placeholder="Введите название точки измерения" name="ElectricityMeasuringPoint.Name">
        </div>
    </div>

    <h2>Счетчик электрической энергии</h2>
    <div class="border-bottom row">
        <div class="form-group col">
            <label for="ElectricityMeter.Number">Номер</label>
            <input id="ElectricityMeter.Number" class="form-control" placeholder="" name="ElectricityMeter.Number">
        </div>
        <div class="form-group col">
            <label for="ElectricityMeter.MeterType">Тип счетчика</label>
            <input id="ElectricityMeter.MeterType" class="form-control" placeholder="" name="ElectricityMeter.MeterType">
        </div>
        <div class="form-group col">
            <label for="ElectricityMeter.CheckDate">Дата проверки</label>
            <input type="datetime-local" id="ElectricityMeter.CheckDate" class="form-control" placeholder="" name="ElectricityMeter.CheckDate">
        </div>
    </div>

    <h2>Трансформатор тока</h2>
    <div class="border-bottom row">

        <div class="form-group col">
            <label for="CurrentTransformer.Number">Номер</label>
            <input id="CurrentTransformer.Number" class="form-control" placeholder="" name="CurrentTransformer.Number">
        </div>
        <div class="form-group col">
            <label for="CurrentTransformer.MeterType">Тип трансформатора тока</label>
            <input id="CurrentTransformer.MeterType" class="form-control" placeholder="" name="CurrentTransformer.MeterType">
        </div>
        <div class="form-group col">
            <label for="CurrentTransformer.TransformationRatio">Коэффициент трансформации</label>
            <input id="CurrentTransformer.TransformationRatio" class="form-control" placeholder="" name="CurrentTransformer.TransformationRatio">
        </div>
        <div class="form-group col">
            <label for="CurrentTransformer.CheckDate">Дата проверки</label>
            <input type="datetime-local" id="CurrentTransformer.CheckDate" class="form-control" placeholder="" name="CurrentTransformer.CheckDate">
        </div>
    </div>

    <h2>Трансформатор напряжения</h2>
    <div class=" row">
        <div class="form-group col">
            <label for="PotentialTransformer.Number">Номер</label>
            <input id="PotentialTransformer.Number" class="form-control" placeholder="" name="PotentialTransformer.Number">
        </div>
        <div class="form-group col">
            <label for="PotentialTransformer.MeterType">Тип трансформатора напряжения</label>
            <input id="PotentialTransformer.MeterType" class="form-control" placeholder="" name="PotentialTransformer.MeterType">
        </div>
        <div class="form-group col">
            <label for="PotentialTransformer.TransformationRatio">Коэффициент трансформации</label>
            <input id="PotentialTransformer.TransformationRatio" class="form-control" placeholder="" name="PotentialTransformer.TransformationRatio">
        </div>
        <div class="form-group col">
            <label for="PotentialTransformer.CheckDate">Дата проверки</label>
            <input type="datetime-local" id="PotentialTransformer.CheckDate" class="form-control" placeholder="" name="PotentialTransformer.CheckDate">
        </div>
    </div>
    <button type="submit" class="btn btn-primary float-right">Создать</button>

</form>
