@{
    ViewData["Title"] = "Трансформаторы тока";
}
@model List<CurrentTransformer>;

<div class="text-center">
    <h1 class="display-4">Список трансформаторов тока</h1>
</div>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>Id</th>
            <th>Номер</th>
            <th>Тип трансформатора тока</th>
            <th>Коэффициент трансформации</th>
            <th>Дата проверки</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CurrentTransformerId</td>
                <td>@item.Number</td>
                <td>@item.TransformerType</td>
                <td>@item.TransformationRatio</td>
                <td class="text-danger">@item.CheckDate</td>
            </tr>
        }
    </tbody>
</table>
