@{
    ViewData["Title"] = "Счетчики электрической энергии";
}
@model List<ElectricityMeter>;

<div class="text-center">
    <h1 class="display-4">Список  счетчиков электрической энергии</h1>
</div>
@if (Model.Any())
{
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Номер</th>
                <th>Тип счетчика</th>
                <th>Дата проверки</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ElectricityMeterId</td>
                    <td>@item.Number</td>
                    <td>@item.MeterType</td>
                    <td class="text-danger">@item.CheckDate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="text-success text-center">Счетчики с истекшим сроком проверки отсутствуют</h2>
}